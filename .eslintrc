{
  "env": {
    "browser": true,
    "es6": true
  },
  "parser": "babel-eslint",
  "extends": [
    "@stnew",
    "plugin:react/recommended"
  ],
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "plugins": [
    "react"
  ],
  "settings": {
    "react": {
      "version": "detect"
    }
  },
  "rules": {
    // PayPal doesn't use semicolons
    "semi": [
      "error",
      "never"
    ],
    // Consistant comment styles
    "multiline-comment-style": [
      "error",
      "starred-block"
    ],
    "no-plusplus": "off"
  }
}
